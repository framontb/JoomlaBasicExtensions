<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" 
        addfieldpath="components/com_ramajax/models/fields">
        <field
            name="league"
            header="Please select a league"
            type="sql"
            default="" 
            label="Select a league"
            query="SELECT league AS value, league AS text FROM #__ramajax_league_list"
        />

        <field 
            name="team" 
            type="ramajax" 
            label="Select a team"
            masterFieldName="league"
            masterFieldTable="#__ramajax_league_list"
            slaveFieldName="team"
            slaveFieldTable="#__ramajax_league_team_map"
	    />

        <field 
            name="player" 
            type="ramajax" 
            label="Select a player"
            masterFieldName="team"
            masterFieldTable="#__ramajax_league_team_map"
            slaveFieldName="player"
            slaveFieldTable="#__ramajax_use_example"
	    />
    </fields>
    <fields name="list">
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_CONTENT_LIST_LIMIT"
            description="COM_RAMCLASIFICADO_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>